---
import SiteHead from '@containers/SiteHead.astro';
import Header from '@containers/Header.astro';
import Footer from '@containers/Footer.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en" class="motion-safe:scroll-smooth">
	<head>
		 <SiteHead {title} />
	</head>
	<body class="grid min-h-screen grid-rows-[auto_1fr_auto] bg-light text-darker">
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>